<div class="col mt-4">
  <h2 class="text-center">Add new cocktail</h2>
    <div class="row justify-content-center">
      <div class="col-12 md-8">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient,  prompt: "Pick one from list" %>
          <%= f.input :description %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
