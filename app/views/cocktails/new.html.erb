<div class="col mt-3">
<h2 class="text-center">Add new cocktail</h2>
  <!-- Add cocktail form -->
  <div class="container pt-5" id="ingredient-form">
    <div class="row justify-content-center">
      <div class="col-12 md-8">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
